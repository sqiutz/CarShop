<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.keeping.business.dal.dao.PropertyDao">

	<resultMap id="PropertyDoMap" type="PropertyDo">
		<id column="ID" property="id" />
		<result column="pkey" property="PKEY" />
		<result column="pvalue" property="PVALUE" />
	</resultMap>
	
	<sql id="Base_Column_List">
		ID,PKEY,PVALUE
	</sql>

	<sql id="QUERY_PARAM">
		<trim prefix="WHERE" prefixOverrides="AND |OR ">
			<if test="id !=null and id !=''">
				AND ID = #{id}
			</if>
		</trim>
	</sql>
	
	<insert id="addProperty" parameterType="PropertyDo">
		INSERT INTO TBL_PROPERTY 
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				ID,
			</if>
			<if test="pkey != null">
				PKEY,
			</if>
			<if test="pvalue != null">
				PVALUE,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id},
			</if>
			<if test="pkey != null">
				#{pkey},
			</if>
			<if test="pvalue != null">
				#{pvalue},
			</if>
		</trim>
	</insert>
	
	<update id="modifyProperty" parameterType="PropertyDo">
		UPDATE TBL_PROPERTY
		<set>
			<if test="pkey != null">
				KEY = #{pkey},
			</if>
			<if test="pvalue != null">
				KEY = #{pvalue},
			</if>
		</set>
		WHERE 
		PKEY = #{pkey}
	</update>

	<select id="queryByKey" resultMap="PropertyDoMap" 
		parameterType="java.lang.String">
		SELECT
		<include refid="Base_Column_List" />
		FROM TBL_PROPERTY
		WHERE
		PKEY = #{pkey}
	</select>
	
</mapper>
