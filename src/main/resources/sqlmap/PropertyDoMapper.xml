<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.keeping.business.dal.dao.PropertyDao">

	<resultMap id="PropertyDoMap" type="PropertyDo">
		<id column="ID" property="id" />
		<result column="COUNTERNUM" property="counterNum" />
	</resultMap>
	
	<sql id="Base_Column_List">
		ID,COUNTERNUM
	</sql>

	<sql id="QUERY_PARAM">
		<trim prefix="WHERE" prefixOverrides="AND |OR ">
			<if test="id !=null and id !=''">
				AND ID = #{id}
			</if>
		</trim>
	</sql>
	
	<insert id="addProperty" parameterType="PropertyDo">
		INSERT INTO TBL_PROPERTY 
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="counterNum != null">
				COUNTERNUM,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="counterNum != null">
				#{counterNum},
			</if>
		</trim>
	</insert>
	
	<update id="modifyProperty" parameterType="PropertyDo">
		UPDATE TBL_PROPERTY
		<set>
			<if test="counterNum != null">
				COUNTERNUM = #{counterNum},
			</if>
		</set>
		WHERE 
		ID = #{id}
	</update>

	<select id="queryById" resultMap="PropertyDoMap" 
		parameterType="java.lang.Integer">
		SELECT
		<include refid="Base_Column_List" />
		FROM TBL_PROPERTY
		WHERE
		ID = #{id}
	</select>
	
</mapper>
